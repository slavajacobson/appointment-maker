<!DOCTYPE html>
<html>
<head>
  <title>Irina's Salon</title>
  <%= include_gon %>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <script src="http://js.pusher.com/2.1/pusher.min.js" type="text/javascript"></script>
  <%= csrf_meta_tags %>

  <link href='http://fonts.googleapis.com/css?family=Quicksand:400,700,300' rel='stylesheet' type='text/css'>


<!--[if lt IE 9]>
  <script src="js/html5shiv.js"></script>
    <script src="js/respond.src.js"></script>
<![endif]-->


</head>
<body>
    <div id="info_box">
    Click to start making an appointment
    </div>


    <div id="wrapper">
        <div id="container">
            <header>
                <div class="container_24">
                    <h1 id="logo">
                        <a href="#home"><%= image_tag "logo.png" %></a>
                    </h1>
                    <!-- <a href="#" class="donate">Donate Now!</a> -->

                        <div id="user_nav">
                          <% if user_signed_in? %>
                            <strong>Hello <%= current_user.full_name %></strong>
                            (<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>  |
                            <%= link_to "Edit Profile", edit_user_registration_path %>)
                            
                          <% else %>
                            <%= link_to "Sign up", new_user_registration_path %> or
                            <%= link_to "Sign in", new_user_session_path %>
                          <% end %>
                        </div>

                </div>

            </header>
            <section id="content">
                <div class="inner">
                  <div class="container_24">
                        <nav id="menu">
                            <ul class="mainmenu">
                                <li><a href="#home">N / A</a></li>
                                <li><a href="#about">N / A</a></li>
                                <li>
                                    <a href="javascript:void(0);">N / A</a>
                                    <ul class="sub_menu level1">
                                        <li><a href="#media-images">N / A</a></li>
                                        <li><a href="#media-videos">N / A</a></li>
                                    </ul>
                                </li>
                                <li><a href="#events">N / A</a></li>
                                <li class="act"><a href="#scheduler">Book</a></li>
                                <li><a href="#contacts">N / A</a></li>
                                <div class="clear"></div>
                            </ul>
                        </nav>

                    </div>

                  <div class="wrap container_24">
                      <div class="ajaxed_content" style="height: 505px; overflow:auto; padding:15px">
                        <%= yield %>
                      </div>
                    </div>
                    <div class="container_24">
                      <%= image_tag "shadow.png" %>
                    </div>
                </div>
            </section>
            <footer>
                <div class="container_24">
                  <div class="clearfix">
                      <div class="fleft">&copy; Copyright 2020 <h4>justbelieve</h4> All Rights Reserved.</div>
                        <div class="fright">
                          <!-- player -->
                            <div id="jquery_jplayer" class="jp-jplayer">
                                
                            </div>
                            <div id="jp_container" class="jp-audio">
                                <ul class="jp-controls">
                                    <li>
                                      <a class="jp-mute" title="mute" tabindex="1" href="javascript:;" style="display: none;"></a>
                                    </li>
                                    <li>
                                      <a class="jp-unmute" title="unmute" tabindex="1" href="javascript:;" style="display: inline;"></a>
                                    </li>
                                    <li>
                                      <a class="jp-volume-max" title="max volume" tabindex="1" href="javascript:;"></a>
                                    </li>
                                </ul>
                                <div class="jp-txt">Sound:</div>
                                <div class="jp-volume-bar">
                                    <div class="jp-volume-bar-value" style="width: 0%;"></div>
                                </div>
                            </div>
                            <!-- /player -->
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>    
</body>
</html>