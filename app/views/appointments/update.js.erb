<% if params[:appointment_form_action] == "commit" %>
	$('#edit_appointment').modal('hide');
	show_alert("Appointment Update", "Your appointment was succesfully updated.");

<% elsif params[:appointment_form_action] == "cancel" %>

	
	$('#edit_appointment').modal('hide');

	show_alert("Appointment Update", "Your appointment was cancelled. Thank you!");
<% end %>