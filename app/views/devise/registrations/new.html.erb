<div style="display:table; margin: 0 auto;">
  <h2>Sign up</h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div><%= f.label :email %>
    <%= f.email_field :email, :autofocus => true, style:'width:208px;' %></div>

    <div><%= f.label :full_name %>
    <%= f.text_field :full_name %></div>

    <div><%= f.label :phone_number %>
    <%= f.text_field :phone_number %></div>


    <div><%= f.label :password %>
    <%= f.password_field :password, style:'width:208px;' %></div>

    <div><%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, style:'width:208px;' %></div>

    <div><%= f.submit "Sign up", class: 'button' %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
